<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="member">

<select id="selectMember" resultType="map">
	SELECT * FROM MEMBER
</select> 

<select id="selectMemberById" resultType="map" parameterType="string">
	SELECT * FROM MEMBER WHERE MEM_EMAIL=#{id}
</select>

<select id="selectMemberByNick" resultType="map" parameterType="string">
	SELECT * FROM MEMBER WHERE MEM_NICKNAME=#{nick}
</select>

<!-- <select id="selectMemberByPhone" resultType="map" parameterType="string"> -->
<!-- 	SELECT * FROM MEMBER WHERE MEM_NICKNAME=#{phone} -->
<!-- </select> -->

<insert id="signUpEnd" parameterType="member">
	INSERT INTO MEMBER VALUES(SEQ_MEMBER_NO.NEXTVAL, #{userId}, #{password}, #{name}, #{nick}, #{gender}, 
		#{birthday}, DEFAULT, DEFAULT, DEFAULT, DEFAULT, "일반유저", DEFAULT, DEFAULT)
</insert>
</mapper>
